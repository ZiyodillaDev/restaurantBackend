{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}